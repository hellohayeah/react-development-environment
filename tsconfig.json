{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "paths": {
      "*": ["common/*", "client/*", "server/*", "*"]
    }
  },
  "include": ["src"],
  "exclude": ["blueprint-templates"]
}
